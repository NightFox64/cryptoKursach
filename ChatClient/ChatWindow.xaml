<Window x:Class="ChatClient.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        xmlns:converters="clr-namespace:ChatClient.Converters"
        mc:Ignorable="d"
        Title="Chat" Height="500" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#1e1e1e">
    <Window.Resources>
        <converters:ImageConverter x:Key="ImageConverter"/>
        <converters:IsMineToHorizontalAlignmentConverter x:Key="IsMineToAlignmentConverter"/>
        <converters:SenderNameConverter x:Key="SenderNameConverter"/>
        <converters:MessageContentConverter x:Key="MessageContentConverter"/>
        <converters:MessageTypeToTemplateConverter x:Key="MessageTypeConverter">
            <converters:MessageTypeToTemplateConverter.TextMessageTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="{Binding IsMine, Converter={StaticResource IsMineToAlignmentConverter}}">
                        <TextBlock Text="{Binding Content, Converter={StaticResource SenderNameConverter}}" 
                                   VerticalAlignment="Top" 
                                   Margin="0,0,5,0"
                                   FontWeight="SemiBold"
                                   Foreground="#007acc"/>
                        <TextBlock Text="{Binding Content, Converter={StaticResource MessageContentConverter}}" 
                                   TextWrapping="Wrap"
                                   VerticalAlignment="Top"
                                   MaxWidth="400"
                                   Foreground="White"/>
                    </StackPanel>
                </DataTemplate>
            </converters:MessageTypeToTemplateConverter.TextMessageTemplate>
            <converters:MessageTypeToTemplateConverter.ImageMessageTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="{Binding IsMine, Converter={StaticResource IsMineToAlignmentConverter}}">
                        <TextBlock Text="{Binding Content, Converter={StaticResource SenderNameConverter}}" 
                                   VerticalAlignment="Top" 
                                   Margin="0,0,5,0"
                                   FontWeight="SemiBold"
                                   Foreground="#007acc"/>
                        <Image Source="{Binding Content, Converter={StaticResource ImageConverter}}" MaxHeight="100"/>
                    </StackPanel>
                </DataTemplate>
            </converters:MessageTypeToTemplateConverter.ImageMessageTemplate>
            <converters:MessageTypeToTemplateConverter.FileMessageTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="{Binding IsMine, Converter={StaticResource IsMineToAlignmentConverter}}">
                        <TextBlock Text="{Binding Content, Converter={StaticResource SenderNameConverter}}" 
                                   VerticalAlignment="Top" 
                                   Margin="0,0,5,0"
                                   FontWeight="SemiBold"
                                   Foreground="#007acc"/>
                        <StackPanel>
                            <TextBlock Text="ðŸ“Ž File" FontWeight="SemiBold" Foreground="White"/>
                            <Button Content="Download" CommandParameter="{Binding Content}" Margin="0,2,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </converters:MessageTypeToTemplateConverter.FileMessageTemplate>
        </converters:MessageTypeToTemplateConverter>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#007acc"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005a9e"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2d2d30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3f3f46"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#2d2d30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3f3f46"/>
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Chat History -->
        <ListBox x:Name="ChatHistoryListBox" Grid.Row="0" Margin="5" ItemTemplateSelector="{StaticResource MessageTypeConverter}"/>

        <!-- Message Input -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5" HorizontalAlignment="Stretch">
            <TextBox x:Name="MessageTextBox" Height="35" Margin="0,0,5,0" HorizontalAlignment="Stretch" VerticalAlignment="Center" Width="500"/>
            <Button Content="Send" Width="80" Height="35" Click="SendButton_Click"/>
            <Button Content="Attach" Width="80" Height="35" Click="AttachFile_Click"/>
        </StackPanel>

        <!-- Progress Bar (for file transfers, etc.) -->
        <ProgressBar x:Name="TransferProgressBar" Grid.Row="2" Height="10" Margin="5" Visibility="Collapsed"/>
    </Grid>
</Window>
