<Window x:Class="ChatClient.SelectOrCreateChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:ChatClient.Converters"
        Title="Select or Create Chat" Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#1e1e1e">
    <Window.Resources>
        <converters:NullToBoolConverter x:Key="NullToBoolConverter"/>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#007acc"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005a9e"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="{Binding ContactName, StringFormat='Chats with {0}'}"
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="White"
                   Margin="0,0,0,20"/>

        <!-- Chat List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Existing Chats:" 
                           FontSize="16" 
                           Foreground="White" 
                           Margin="0,0,0,10"/>
                
                <ListBox x:Name="ChatsListBox"
                         Background="#2d2d30"
                         BorderThickness="1"
                         BorderBrush="#3f3f46"
                         Foreground="White"
                         MinHeight="200"
                         SelectionChanged="ChatsListBox_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#3e3e42" 
                                    Padding="10" 
                                    Margin="5"
                                    CornerRadius="5"
                                    BorderThickness="1"
                                    BorderBrush="#555">
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" 
                                               FontWeight="Bold" 
                                               FontSize="14"
                                               Foreground="White"/>
                                    <TextBlock FontSize="12" Foreground="#aaa" Margin="0,5,0,0">
                                        <Run Text="Algorithm: "/>
                                        <Run Text="{Binding CipherAlgorithm}" FontWeight="SemiBold"/>
                                        <Run Text=" | Mode: "/>
                                        <Run Text="{Binding CipherMode}" FontWeight="SemiBold"/>
                                        <Run Text=" | Padding: "/>
                                        <Run Text="{Binding PaddingMode}" FontWeight="SemiBold"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">
            <Button Content="Open Selected Chat" 
                    Click="OpenChat_Click"
                    Width="150"
                    IsEnabled="{Binding ElementName=ChatsListBox, Path=SelectedItem, Converter={StaticResource NullToBoolConverter}}"/>
            <Button Content="Create New Chat" 
                    Click="CreateNewChat_Click"
                    Width="150"/>
            <Button Content="Cancel" 
                    Click="Cancel_Click"
                    Width="100"
                    Background="#555"/>
        </StackPanel>
    </Grid>
</Window>
