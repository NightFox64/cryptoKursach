<UserControl x:Class="ChatClient.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:ChatClient"
             xmlns:converters="clr-namespace:ChatClient.Converters"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#2d2d30">
    <UserControl.Resources>
        <converters:ImageConverter x:Key="ImageConverter"/>
        <converters:IsMineToHorizontalAlignmentConverter x:Key="IsMineToAlignmentConverter"/>
        <converters:SenderNameConverter x:Key="SenderNameConverter"/>
        <converters:MessageContentConverter x:Key="MessageContentConverter"/>
        <converters:MessageTypeToTemplateConverter x:Key="MessageTypeConverter">
            <converters:MessageTypeToTemplateConverter.TextMessageTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="{Binding IsMine, Converter={StaticResource IsMineToAlignmentConverter}}">
                        <TextBlock Text="{Binding Content, Converter={StaticResource SenderNameConverter}}" 
                                   VerticalAlignment="Top" 
                                   Margin="0,0,5,0"
                                   FontWeight="SemiBold"
                                   Foreground="#007acc"/>
                        <TextBlock Text="{Binding Content, Converter={StaticResource MessageContentConverter}}" 
                                   TextWrapping="Wrap"
                                   VerticalAlignment="Top"
                                   MaxWidth="400"
                                   Foreground="White"/>
                    </StackPanel>
                </DataTemplate>
            </converters:MessageTypeToTemplateConverter.TextMessageTemplate>
            <converters:MessageTypeToTemplateConverter.ImageMessageTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="{Binding IsMine, Converter={StaticResource IsMineToAlignmentConverter}}">
                        <TextBlock Text="{Binding Content, Converter={StaticResource SenderNameConverter}}" 
                                   VerticalAlignment="Top" 
                                   Margin="0,0,5,0"
                                   FontWeight="SemiBold"
                                   Foreground="#007acc"/>
                        <StackPanel>
                            <Image Source="{Binding Content, Converter={StaticResource ImageConverter}}" MaxHeight="100"/>
                            <Button Content="Download Image" Click="DownloadImage_Click" Tag="{Binding Content}" Margin="0,2,0,0" Padding="5,3" FontSize="10"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </converters:MessageTypeToTemplateConverter.ImageMessageTemplate>
            <converters:MessageTypeToTemplateConverter.FileMessageTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="{Binding IsMine, Converter={StaticResource IsMineToAlignmentConverter}}">
                        <TextBlock Text="{Binding Content, Converter={StaticResource SenderNameConverter}}" 
                                   VerticalAlignment="Top" 
                                   Margin="0,0,5,0"
                                   FontWeight="SemiBold"
                                   Foreground="#007acc"/>
                        <StackPanel>
                            <TextBlock Text="ðŸ“Ž File" FontWeight="SemiBold" Foreground="White"/>
                            <Button Content="Download" Click="DownloadFile_Click" Tag="{Binding Content}" Margin="0,2,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </converters:MessageTypeToTemplateConverter.FileMessageTemplate>
        </converters:MessageTypeToTemplateConverter>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#007acc"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005a9e"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2d2d30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3f3f46"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#2d2d30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3f3f46"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid x:Name="RootGrid" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Chat Title -->
            <Border Grid.Row="0" Background="#1e1e1e" Padding="10" BorderBrush="#3f3f46" BorderThickness="0,0,0,1">
                <Grid>
                    <TextBlock x:Name="ChatTitleTextBlock" Text="Chat" FontSize="18" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                    <Button Content="ðŸ—‘ï¸ Delete" Width="100" Height="30" Click="DeleteChatButton_Click" Padding="5,3" HorizontalAlignment="Right">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Setter Property="Background" Value="#d13438"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#a02d31"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- Chat History -->
            <ListBox x:Name="ChatHistoryListBox" Grid.Row="1" Margin="10" ItemTemplateSelector="{StaticResource MessageTypeConverter}"
                     ScrollViewer.CanContentScroll="True"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     VirtualizingPanel.IsVirtualizing="True"
                     VirtualizingPanel.VirtualizationMode="Recycling"/>

            <!-- Message Input -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10" HorizontalAlignment="Stretch">
                <TextBox x:Name="MessageTextBox" Height="35" Margin="0,0,5,0" HorizontalAlignment="Stretch" VerticalAlignment="Center" MinWidth="300"/>
                <Button Content="Send" Width="80" Height="35" Click="SendButton_Click"/>
                <Button Content="Attach" Width="80" Height="35" Click="AttachFile_Click"/>
            </StackPanel>

            <!-- Progress Bar (for file transfers, etc.) -->
            <ProgressBar x:Name="TransferProgressBar" Grid.Row="3" Height="10" Margin="10,0,10,10" Visibility="Collapsed"/>
        </Grid>
        
        <!-- Empty State -->
        <TextBlock x:Name="EmptyStateTextBlock" 
                   Text="Select a chat or contact to begin" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center" 
                   Foreground="#aaa"
                   FontSize="16"/>
    </Grid>
</UserControl>
